<ContentDialog
    x:Class="UWP.Views.Dialogs.DeleteGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP.Views.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Delete Group"
    PrimaryButtonText="Delete"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_DeleteButtonClick"
    SecondaryButtonClick="ContentDialog_CancelButtonClick">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock TextWrapping="WrapWholeWords">Are you sure you want to delete this group?</TextBlock>
        </StackPanel>
    </Grid>
</ContentDialog>
